@using WildWestBankApp.Models

@model Transaction

@{
    ViewBag.Title = "Transfer";
}

<h2>Transfer money</h2>

<div>
    @using(Html.BeginForm()) {
        @Html.Hidden("ID", @Model.ID)
        <select id="Type" name="Type" style="visibility:hidden;">
            <option value="Transfer"></option>
        </select>
        <table>
            <tr>
                <td>@Html.Label("From Account (ID)"):</td>
                <td>@Html.TextBox("FromAccountID", "")</td>
                <td>@Html.ValidationMessage("FromAccountID")</td>
            </tr>
            <tr>
                <td>@Html.Label("To Account (ID)"):</td>
                <td>@Html.TextBox("ToAccountID", "")</td>
                <td>@Html.ValidationMessage("ToAccountID")</td>
            </tr>
            <tr>
                <td>@Html.Label("Amount"):</td>
                <td>@Html.TextBox("Amount", "")</td>
                <td>@Html.ValidationMessage("Amount")</td>
            </tr>
        </table>
        <input type="submit" value="Commit the transaction" />
    }
    <div class="transactionResult">
        @ViewBag.TransactionResult
    </div>
</div> 

<p>@Html.ActionLink("Return to transaction selection page", "index", "transaction")</p>